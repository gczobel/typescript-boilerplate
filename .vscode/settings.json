{
  "eslint.enable": true,
  "editor.formatOnSave": true,
  // turn VSCode internal formatter off for JS and JSX, ESLint will do it.
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}